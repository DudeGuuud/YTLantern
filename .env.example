# YTLantern Configuration
# Copy this file to .env and modify the values as needed

# Port Configuration
# External HTTP port (default: 8080)
EXTERNAL_HTTP_PORT=8080

# External HTTPS port (default: 8443)
EXTERNAL_HTTPS_PORT=8443

# Frontend Environment Variables
# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8080/api/v1

# Application Configuration
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1

# Backend URL for server-side requests
BACKEND_URL=http://backend:8000

# Backend Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false
WORKERS=1
CORS_ORIGINS=http://localhost:8080,https://yourdomain.com
REDIS_URL=redis://redis:6379/0
VIDEO_STORAGE_PATH=/app/videos

# Rate Limiting
RATE_LIMIT_PER_MINUTE=10
RATE_LIMIT_PER_HOUR=100

# Cache Settings
VIDEO_CACHE_TTL=3600

# Cleanup Configuration
# Cleanup interval in seconds (default: 3600 = 1 hour)
CLEANUP_INTERVAL=3600

# Maximum video age in seconds (default: 86400 = 24 hours)
MAX_VIDEO_AGE=86400

# Memory Limits
# Backend memory limit in MB
MAX_MEMORY_MB=1024

# Cleanup service memory limit in MB
CLEANUP_MAX_MEMORY_MB=512

# Logging
LOG_LEVEL=INFO

# yt-dlp Settings
YTDLP_TIMEOUT=30
YTDLP_RETRIES=3
